<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.tycho.mss.layout.DashboardLayout">

    <Label fx:id="status_label" GridPane.columnIndex="0" GridPane.rowIndex="0" text="Status" style="-fx-font-size: 20pt;">
        <padding>
            <Insets top="4" left="8" right="8"/>
        </padding>
    </Label>

    <Label fx:id="player_count_label" GridPane.columnIndex="0" GridPane.rowIndex="1" text="0 / 10 Players connected">
        <padding>
            <Insets top="4" left="8" right="8"/>
        </padding>
    </Label>

    <HBox GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" alignment="BOTTOM_CENTER" spacing="10">
        <padding>
            <Insets top="10" right="8" bottom="8" left="10"/>
        </padding>
        <Button fx:id="start_button" text="Start"/>
        <Button fx:id="restart_button" text="Restart"/>
        <Button fx:id="stop_button" text="Stop"/>
    </HBox>


</GridPane>
