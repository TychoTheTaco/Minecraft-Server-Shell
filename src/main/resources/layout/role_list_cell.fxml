<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListCell?>
<?import javafx.scene.control.Tooltip?>
<fx:root type="javafx.scene.control.ListCell" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <graphic>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="10" right="8" bottom="10" left="8" />
            </padding>
            <GridPane fx:id="grid_pane" HBox.hgrow="ALWAYS" style="-fx-background-color: orange;">
                <padding>
                    <Insets top="50" bottom="50" />
                </padding>
                <Label fx:id="name" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS"/>
                <HBox fx:id="buttons" GridPane.columnIndex="2" GridPane.rowIndex="0" spacing="10" style="-fx-background-color: red; -fx-border-width: 0;">
                    <Button fx:id="edit_button" styleClass="image_button" style="-fx-background-image: url('/icons/round_edit_black_24dp.png');">
                        <tooltip><Tooltip text="Edit" /></tooltip>
                    </Button>
                    <Button fx:id="delete_button" styleClass="image_button" style="-fx-background-image: url('/icons/round_delete_black_24dp.png');">
                        <tooltip><Tooltip text="Delete" /></tooltip>
                    </Button>
                </HBox>
            </GridPane>
        </HBox>
    </graphic>
</fx:root>
