<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.tycho.mss.layout.ConsoleLayout">

    <!-- Console and Chat Area -->
    <GridPane prefWidth="800" prefHeight="500">
        <TextArea fx:id="console" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" editable="false"/>
        <TextField fx:id="console_input" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" disable="true" text="Input disabled until server has started."/>
    </GridPane>

    <!-- Server offline overlay -->
    <StackPane fx:id="offline_overlay" style="-fx-background-color: #171717">
        <Label text="The console is unavailable when the server is offline."/>
    </StackPane>

</StackPane>
